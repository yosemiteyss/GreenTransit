<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yosemiteyss.greentransit.app.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_regionRoutesFragment"
            app:destination="@id/regionRoutesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_stopFragment"
            app:destination="@id/stopFragment" />
    </fragment>

    <dialog
        android:id="@+id/searchFragment"
        android:name="com.yosemiteyss.greentransit.app.search.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_regionRoutesFragment"
            app:destination="@id/regionRoutesFragment" />
    </dialog>

    <dialog
        android:id="@+id/regionRoutesFragment"
        android:name="com.yosemiteyss.greentransit.app.search.RegionRoutesFragment"
        tools:layout="@layout/fragment_region_routes">
        <argument
            android:name="region"
            app:argType="com.yosemiteyss.greentransit.domain.models.RouteRegion"/>
    </dialog>

    <dialog
        android:id="@+id/stopFragment"
        android:name="com.yosemiteyss.greentransit.app.stop.StopFragment"
        tools:layout="@layout/fragment_stop">
        <argument
            android:name="stopId"
            app:argType="long"/>
    </dialog>

</navigation>