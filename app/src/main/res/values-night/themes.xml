<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.GreenTransit.Dialog.Fullscreen.DayNight.Search" parent="ThemeOverlay.GreenTransit.Dialog.Fullscreen.DayNight">
        <item name="android:windowBackground">@color/black_alpha_60</item>
    </style>
    <style name="ThemeOverlay.GreenTransit.Dialog.Fullscreen.DayNight" parent="ThemeOverlay.GreenTransit.Dialog.Fullscreen.Dark"/>
    <style name="ThemeOverlay.GreenTransit.Dialog.Fullscreen.Dark" parent="@style/ThemeOverlay.GreenTransit.Dialog.Fullscreen">
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.GreenTransit.Splash.DayNight" parent="Theme.GreenTransit.Splash.Dark"/>
    <style name="Theme.GreenTransit.Splash.Dark" parent="Theme.GreenTransit.Dark">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">?attr/colorPrimarySurface</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.GreenTransit.DayNight" parent="Theme.GreenTransit.Dark"/>
    <style name="Theme.GreenTransit.Dark" parent="Theme.GreenTransit">
        <item name="colorPrimary">@color/green_300</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorSecondary">@color/green_300</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorError">@color/purple_300</item>
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/grey</item>

        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="searchBarColor">@color/background_dark</item>
        <item name="newsItemColor">@color/news_card_dark</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
</resources>